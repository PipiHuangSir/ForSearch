page {
  background: white;
}

::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}

.bar{
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  background: rgb(252, 250, 250);
  border-bottom: 1rpx solid lightgray
}
.selectBar{
  width: 250rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.selectBar .all{
  width: 80rpx;
  font-size: 30rpx;
  color: rgb(116, 115, 115);
}

.selectBar .allSelect{
  width: 80rpx;
  font-size: 30rpx;
  color: lightgreen;
}
.bar .searchText{
  flex: 0,0,80%;
  margin-top:5rpx;
  margin-right: 10rpx;
  flex-direction: row;
  align-items: center;
}
.searchText .text{
  width: 150rpx;
  border: 1px solid rgb(116, 115, 115);
  border-radius: 20px;
  font-style: italic;
  font-size: 25rpx;
  text-align: center;
}

.content{
  width: 100%;
  height: 1000rpx;
}
.list{
  display: flex;
  height: 100%;
  flex-direction: column;
  margin-top: 10rpx;
}

.news1{
  background-color: white;
  width: 100%;
  height: 240rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.top_1{
  width: 100%;
  height:  65%;
  display: flex;
  margin-top: 5rpx;
  flex-direction: row;
}
.top_1 .title{
  width: 70%;
  max-width: 70%;
  height: 100%;
  margin-left: 20rpx;
  line-height: 50rpx;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3 
}
.top_1 .image{
  width: 25%;
  height: 100%;
  margin-left: 10rpx;
}

.news2{
  background-color: white;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.top_2{
  display: flex;
  flex-direction: column;
  margin-top: 2rpx;
}
.top2 .pics{
  width: 100%;
  height: 400rpx;
}

.news3{
  width: 100%;
  height: 400rpx;
}
.top_3{
  width: 90%;
  max-width: 90%;
  height: 70%;
  display: flex;
  flex-direction: column;
  margin-top: 5rpx;
  margin-left: 20rpx;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3 
}
.top_3 .summary{
  width: 100%;
  height: 20%;
}

.top_3 .pics{
  width: 100%;
  height: 100%;
}

.list .buttom{
  width: 100%;
  height: 30%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.buttom .text{
  margin-left: 20rpx;
  font-size: 20rpx;
  text-align: center;
  color: rgb(114, 111, 111)
}

.buttom .channel{
  margin-left: 20rpx;
  font-size: 20rpx;
  color: rgb(114, 111, 111)
}

.list .line{
  width: 90%;
  height: 1rpx;
  margin-top: 2rpx;
  background-color:lightgray;
}

.content .none{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  margin-top: 100rpx;
}

.none .showNone{
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  text-align: center;
  font-style: italic;
  color:  rgb(218, 218, 218)
}
